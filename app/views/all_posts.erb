<div class="all-posts">
    <div id='flash' class='notice'>
      <a class="close" data-dismiss="alert"></a>
      <%= flash[:welcome] %>
    </div>


  <% if session[:id] %>
  <h2 class="title"><a href="/posts/new">Create Post</a></h3>
  <% end %>
  <table>
    <% if @posts.any? %>
    <thead>
      <th>Title</th>
      <th>Created</th>
      <th>Updated at</th>
      <% if session[:id] %>
      <th>Edit</th>
      <th>Delete</th>
      <% end %>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><a href="/posts/post/<%= post.id %>"><%= post.title %></a></td>
        <td><%= post.created_at.strftime("Created at:%m/%d/%y %I:%M%P") %></td>
        <% if session[:id] %>
        <td><a href="/posts/edit/<%= post.id %>">Edit Post</a></td>
        <td><a href="/posts/delete/<%= post.id %>">Delete Post</a></td>  
        <% end %>
      </tr>
    </tbody>
  </table>
  <% end %>
  <% else %>
  <div><h2>No posts to display.</h2></div> 
  <% end %>

  <h2 class="title"><a href="/tags">Tag list</a></h2>
</div>

